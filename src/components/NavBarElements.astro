---
export interface Props {
  title: string;
}

const { title } = Astro.props;

const showSearchBar = title != "Home" && title != "Busqueda";
---

{
  () => {
    if (showSearchBar) {
      return (
        <li class="menu-item mr-5 form-control">
          <input
            type="text"
            placeholder="Buscar"
            class="input input-primary input-bordered"
          />
        </li>
      );
    }
  }
}
