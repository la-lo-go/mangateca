---
import Layout from "../layouts/Layout.astro";
import ChapterRow from "../components/ChapterRow.astro";
---

<Layout title="Manga">
  <section>
    <div class="container mx-auto">
      <h1 class="text-3xl font-semibold capitalize">From the blog</h1>

      <div class="mt-8 lg:-mx-6 lg:flex lg:items-center">
        <!-- Manga Information -->
        <div class="w-full lg:mx-6 lg:w-1/3 h-72 lg:h-96 flex">
          <img
            class="rounded-xl"
            src="https://images.unsplash.com/photo-1590283603385-17ffb3a7f29f?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80"
            alt=""
          />
        </div>

        <div class="divider divider-vertical lg:divider-vertical"></div>

        <!-- Manga chapters -->
        <div class="mt-6 lg:w-2/3 lg:mt-0 lg:mx-2 items-start">
          <div class="overflow-x-auto">
            <table class="table table-zebra w-full">
              <!-- head -->
              <thead>
                <tr>
                  <th></th>
                  <th>Nombre</th>
                  <th>Sitio original</th>
                </tr>
              </thead>
              <tbody>
                <ChapterRow
                  chapterNumber={1}
                  chapterName="Software Engineer"
                  link="https://ejemplo.com"
                  originalLink="https://ejemplo.com"
                />
                
                <ChapterRow
                  chapterNumber={2}
                  chapterName="Software Engineer"
                  link="https://ejemplo.com"
                  originalLink="https://ejemplo.com"
                />
                
                <ChapterRow
                  chapterNumber={3}
                  chapterName="Software Engineer"
                  link="https://ejemplo.com"
                  originalLink="https://ejemplo.com"
                />
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
